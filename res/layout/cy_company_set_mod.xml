<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="#ffffff">

    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="20dp">

            <TextView android:text="公司名称"
                android:id="@+id/textView1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <EditText android:id="@+id/edit_orgname"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15dp"
                />


            <TextView android:text="公司电话"
                android:id="@+id/textView2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="25dp"
            />
            <EditText android:id="@+id/edit_orgtel"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textSize="15dp"
                android:singleLine="true"/>


            <TextView android:text="公司地址"
                android:id="@+id/textView3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="25dp"
            />
            <EditText android:id="@+id/edit_address"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15dp"/>


            <TextView android:text="详细地址"
                android:id="@+id/txt_xxaddress"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="25dp"
            />
            <EditText android:id="@+id/edit_xxaddress"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:textSize="15dp"/>


            <TextView android:text="社会信用代码"
                android:id="@+id/textView5"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="25dp"
            />
            <EditText android:id="@+id/edit_creditnum"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15dp"/>


      
        <Button
            android:id="@+id/btn_submit"
            android:text="确认提交"
            android:layout_width="220dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dip"
            android:background="@drawable/buttonshape"
            android:textColor="#ffffff">
        </Button>
        </LinearLayout>
</RelativeLayout>