 <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android" >
 <RelativeLayout android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="#FFFFFFFF">
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp">
            <TextView android:text="发布编号:"
                android:id="@+id/txt_cynum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"/>

            <TextView android:id="@+id/txt_fbnum"
                android:textSize="15dp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"/>
            
            <TextView android:text="起运地:"
                android:id="@+id/txt_fh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="5dp"/>  
            <TextView android:id="@+id/edit_fhaddress"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"/>
            
            <TextView android:text="目的地:"
                android:id="@+id/txt_dd"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="5dp"
            />  
            <TextView android:id="@+id/edit_ddaddress"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"/>
            
            <!-- 导航和视图的分割线 -->
        <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_above="@+id/tableRow4"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        />

            <TextView android:text="投保人名称:"
                android:id="@+id/txt_tbrname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="5dp"
            />
            <EditText android:id="@+id/edit_insure_name"
                android:textSize="15dp"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:singleLine="true"/> 
                
            <TextView android:text="被保险人名称:"
                android:id="@+id/txt_bbxrname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="5dp"
            />
            <EditText android:id="@+id/edit_insured_name"
                android:layout_width="280dp"
                android:textSize="15dp"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:hint="若与保险人相同可不填"/>

            <TextView android:text="被保险人电话:"
                android:id="@+id/txt_insure_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="5dp"
                
            />
            <EditText android:id="@+id/edit_insured_tel"
                android:textSize="15dp"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="number"/>

            <TextView android:text="被保险人人地址:"
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="5dp"
            />
            <EditText android:id="@+id/edit_insured_address"
                android:textSize="15dp"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

            
              
            
            <LinearLayout 
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"> 

            <TextView android:text="投保金额(元):"
                android:id="@+id/txt_insuremoney"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="5dp"
                
            /> 
            <TextView android:text="应付保费(元):"
                android:id="@+id/txt_insuremon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="5dp"              
            />
            </LinearLayout> 
            <LinearLayout 
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <EditText android:id="@+id/edit_insuremoney"
                android:textSize="15dp"
                android:layout_width="110dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="number"/>
              
            <TextView android:id="@+id/txt_premium"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="number"
                android:layout_marginLeft="50dp"/>
            </LinearLayout>  
            <RadioGroup android:id="@+id/radgroup"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">"
            <RadioButton android:id="@+id/radbtn_offline"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="线下支付"
                android:checked="true"/>
            <RadioButton android:id="@+id/radbtn_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额抵扣"
                android:layout_marginLeft="20dp"/>
            </RadioGroup>     
        
        <Button
            android:id="@+id/btn_submit"
            android:text="确认提交"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonshape"
            android:textColor="#ffffff"/>
     </LinearLayout>
</RelativeLayout>
</ScrollView>