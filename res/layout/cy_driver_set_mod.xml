<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="#ffffff">

    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="10dp">

            <TextView android:text="司机姓名"
                android:id="@+id/textView1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <EditText android:id="@+id/edit_driver_name"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15dp"
                />


            <TextView android:text="司机电话"
                android:id="@+id/textView2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="15dp"
            />
            <EditText android:id="@+id/edit_driver_tel"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textSize="15dp"
                android:singleLine="true"/>


            <TextView android:text="身份证号"
                android:id="@+id/textView3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="15dp"
            />
            <EditText android:id="@+id/edit_driver_idcard"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15dp"/>


            <TextView android:text="银行卡号"
                android:id="@+id/txt_xxaddress"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="15dp"
            />
            <EditText android:id="@+id/edit_driver_bankcard"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:textSize="15dp"/>


            <TextView android:text="车牌号"
                android:id="@+id/textView5"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="15dp"
            />
            <EditText android:id="@+id/edit_car_num"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15dp"/>
            <TextView android:text="车辆类型"
                android:id="@+id/textView52"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="15dp"
            />
            <EditText android:id="@+id/edit_car_type"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15dp"/>
            
           <TextView android:text="车辆所属单位"
                android:id="@+id/textView54"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="15dp"
            />
            <EditText android:id="@+id/edit_company_name"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15dp"/>

      
        <Button
            android:id="@+id/btn_submit"
            android:text="确认提交"
            android:layout_width="220dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:background="@drawable/buttonshape"
            android:textColor="#ffffff">
        </Button>
        </LinearLayout>
</RelativeLayout>