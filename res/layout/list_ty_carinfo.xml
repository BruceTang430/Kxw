<?xml version="1.0" encoding="UTF-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:layout_marginTop="50dp"
        android:layout_gravity="center">
        
        <TextView android:id="@+id/txt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginTop="10dp" 
            android:layout_marginLeft="10dp"         
            android:textColor="#4f94cd"
            android:textSize="20dp"/>

        <TextView android:id="@+id/txt_car"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_address"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:text="车     型:"/>
        
        <TextView android:id="@+id/txt_car_type"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_address"
            android:layout_toRightOf="@+id/txt_car"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"/>
        
        <TextView android:id="@+id/txt_num"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_address"
            android:layout_toRightOf="@+id/txt_car_type"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:text="数量(辆):"/>
        
        <TextView android:id="@+id/txt_car_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_address"
            android:layout_toRightOf="@+id/txt_num"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"/>

        <TextView android:id="@+id/txt_w"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_car"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:text="载重(吨):"/>


        <TextView android:id="@+id/txt_car_weight"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_w"
            android:layout_below="@+id/txt_car"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>
        
        <TextView android:id="@+id/txt_nums"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_car"
            android:layout_toRightOf="@+id/txt_car_weight"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:text="车长(米):"/>
        
        <TextView android:id="@+id/txt_car_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_car"
            android:layout_toRightOf="@+id/txt_nums"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"/>
        
        <TextView android:id="@+id/txt_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布时间: "
        android:textSize="15dp"
        android:layout_below="@+id/txt_w"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="#cccccc"/>
        
        <TextView android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_time1"
        android:layout_below="@+id/txt_w"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:textColor="#cccccc"/>
        

    <TextView android:id="@+id/txt_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView android:id="@+id/txt_load_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView android:id="@+id/txt_destination_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView android:id="@+id/txt_fbnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView android:id="@+id/txt_car_vol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView android:id="@+id/txt_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView android:id="@+id/txt_go_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView android:id="@+id/txt_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</RelativeLayout>
