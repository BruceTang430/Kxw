        </TableRow>
                <!-- 第一行 -->
        <TableRow android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip">
            <TextView />
            <TextView android:text="货物价值(元):"
                android:id="@+id/txt_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <EditText android:id="@+id/edit_goods_value"
                android:textSize="15dp"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="numberDecimal"/>"
            <TextView />
        </TableRow> 
        </TableLayout>
 
         <TextView 
             android:layout_below="@+id/tableLayout1"
             android:text="最高赔偿金额(车):"
             android:layout_marginTop="5dp"
                android:id="@+id/txt_qq"
                android:layout_marginLeft="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"                
            />  
        <LinearLayout 
            android:id="@+id/lin1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/txt_qq">                     
        <RadioGroup android:id="@+id/radgroup"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <RadioButton android:id="@+id/radbtn_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50万"
                android:textSize="15dp"
                android:checked="true"/>
            <RadioButton android:id="@+id/radbtn_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100万"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"/>
            <RadioButton android:id="@+id/radbtn_150"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150万"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"/>
            <RadioButton android:id="@+id/radbtn_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200万"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"/>                        
        </RadioGroup> 
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/lin2"
            android:layout_below="@+id/lin1"
            android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp">
            <RadioGroup android:id="@+id/radgroup2"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <RadioButton android:id="@+id/radbtn_addition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附加险(自燃险)"
                android:textSize="15dp"/>
            </RadioGroup>

      </LinearLayout>
        <Button
            android:layout_below="@+id/lin2"
            android:id="@+id/btn_submit"
            android:text="确认提交"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/buttonshape"
            android:textColor="#ffffff"/>
</RelativeLayout>
</ScrollView>