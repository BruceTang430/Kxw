<?xml version="1.0" encoding="UTF-8"?>
 <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:background="#FFFFFFFF">
    <TableLayout android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0,3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">
        <!-- 第一行 -->
        <TableRow android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView />
            <TextView android:text="出发地:"
                android:id="@+id/txt_fhaddress"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"/>
                <Spinner android:id="@+id/province_spinner" 
                 android:layout_width="180dp"
                 android:layout_height="wrap_content"
                 android:textSize="15dp">
             </Spinner> 
            
        </TableRow>
        <!-- 第四行 --> 
        <TableRow android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView />
            <TextView />  
            <Spinner android:id="@+id/city_spinner" 
                 android:layout_width="180dp"
                 android:layout_height="wrap_content"
                 android:textSize="15dp">
             </Spinner> 
             
        </TableRow> 
        <!-- 第五行 --> 
        <TableRow android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView />
            <TextView />
            <Spinner android:id="@+id/county_spinner" 
                 android:layout_width="180dp"
                 android:layout_height="wrap_content"
                 android:textSize="15dp">
             </Spinner>  
             
        </TableRow>

 
        <!-- 第9行 --> 
        <TableRow android:id="@+id/tableRow9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView />
            <TextView android:text="到达地:"
                android:id="@+id/txt_ddaddress"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <Spinner android:id="@+id/province_spinner2" 
                 android:layout_width="180dp"
                 android:layout_height="wrap_content"
                 android:textSize="15dp">
             </Spinner> 
        </TableRow>
        <!-- 第10行 --> 
        <TableRow android:id="@+id/tableRow410"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView />
            <TextView />
            <Spinner android:id="@+id/city_spinner2" 
                 android:layout_width="180dp"
                 android:layout_height="wrap_content"
                 android:textSize="15dp"/>  
             
        </TableRow> 
        <!-- 第11行 --> 
        <TableRow android:id="@+id/tableRow11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView />
            <TextView />  
            <Spinner android:id="@+id/county_spinner2" 
                 android:layout_width="180dp"
                 android:layout_height="wrap_content"
                 android:textSize="15dp"/>
        </TableRow>
              
        <!-- 第13行 --> 
        <TableRow android:id="@+id/tableRow13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView />
            <TextView android:text="车辆类型: "
                android:id="@+id/txt_cllx"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <Spinner android:id="@+id/spin_cartype"
                android:textSize="15dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:entries="@array/ctype"/>
            <TextView />
        </TableRow>   
                <!-- 第14行 --> 
        <TableRow android:id="@+id/tableRow14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView />
            <TextView android:text="长度(米): "
                android:id="@+id/txt_length"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <EditText android:id="@+id/edit_length"
                android:textSize="15dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
               android:singleLine="true"/>
            <TextView />
            </TableRow>
                            <!-- 第15行 --> 
        <TableRow android:id="@+id/tableRow15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView />
            <TextView android:text="数量(辆): "
                android:id="@+id/txt_num"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <EditText android:id="@+id/edit_number"
                android:textSize="15dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:inputType="number"
               android:singleLine="true"/>
            <TextView />
            </TableRow>
                            <!-- 第16行 --> 
        <TableRow android:id="@+id/tableRow16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView />
            <TextView android:text="承运重量(吨):"
                android:id="@+id/txt_w"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <EditText android:id="@+id/edit_weight"
                android:textSize="15dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
               android:singleLine="true"/>
            <TextView />
            </TableRow>
                                        <!-- 第17行 --> 
        <TableRow android:id="@+id/tableRow17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView />
            <TextView android:text="承运体积(m³):"
                android:id="@+id/txt_v"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <EditText android:id="@+id/edit_vol"
                android:textSize="15dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
               android:singleLine="true"/>
            <TextView />
            </TableRow>
        <!-- 第18行 --> 
        <TableRow android:id="@+id/tableRow18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView />
            <TextView android:text="发车时间: "
                android:id="@+id/txt_time"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <EditText android:id="@+id/edit_time"
                android:textSize="15dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="如:20160101"
               android:singleLine="true"/>
            <TextView />
        </TableRow> 
        <!-- 第20行 --> 
        <TableRow android:id="@+id/tableRow28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView />
            <TextView android:text="联系电话: "
                android:id="@+id/txt_ti"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <EditText android:id="@+id/edit_tel"
                android:textSize="15dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:inputType="number"
               android:singleLine="true"/>
            <TextView />
        </TableRow>    
                                    <!-- 第19行 --> 
        <TableRow android:id="@+id/tableRow19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView />
            <TextView android:text="备注:"
                android:id="@+id/txt_a"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <EditText android:id="@+id/edit_remark"
                android:textSize="15dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="可不填"/>
            <TextView />     
            </TableRow> 
        </TableLayout>
        <Button
            android:id="@+id/btn_submit"
            android:text="确认修改"
            android:textColor="#ffffff"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tableLayout1"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonshape">
        </Button>
</RelativeLayout>
</ScrollView>