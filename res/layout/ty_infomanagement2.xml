<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:id="@+id/relativelayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:background="#FFFFFFFF" >
    <TableLayout android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:stretchColumns="0,3"
        android:layout_marginTop="30dip" >
       
        <!-- 第一行 -->
        <TableRow android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView />
            <TextView 
                android:id="@+id/textView1"
                android:text="品名:"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <TextView 
                android:id="@+id/txt_hwname"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
            />
            <TextView />
        </TableRow>
        <!-- 第2行 -->
        <TableRow android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView />
            <TextView 
                android:id="@+id/textView2"
                android:text="发布编号:"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <TextView 
                android:id="@+id/txt_fbnum"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
            />
            <TextView />
        </TableRow>
        <!-- 第3行 -->
        <TableRow android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView />
            <TextView 
                android:id="@+id/textView3"
                android:text="发布时间:"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <TextView 
                android:id="@+id/txt_time"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
            />
            <TextView />
        </TableRow>
        <!-- 导航和视图的分割线 -->
        <View 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#CCCCCC"
        android:layout_above="@+id/tableRow6"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
        <!-- 第4行 -->
        <TableRow android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView />
            <TextView 
                android:id="@+id/textView4"
                android:text="状态:"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <TextView 
                android:id="@+id/txt_state"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
            />
            <TextView />
        </TableRow>
        <!-- 第5行 -->
        <TableRow android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView />
            <TextView 
                android:id="@+id/textView5"
                android:text="付运费方式:"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <TextView 
                android:id="@+id/txt_cost"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
            />
            <TextView />
        </TableRow>
        <!-- 第6行 -->
        <TableRow android:id="@+id/tableRow10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView />
            <TextView 
                android:id="@+id/textView10"
                android:text="保险:"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <TextView 
                android:id="@+id/txt_isinsure"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
            />
            <TextView />
        </TableRow>
        <!-- 导航和视图的分割线 -->
        <View 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#CCCCCC"
        android:layout_above="@+id/tableRow6"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

        <!-- 第7行 -->
        <TableRow android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView />
            <TextView 
                android:id="@+id/textView7"
                android:text="承运人用户名:"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <TextView 
                android:id="@+id/txt_cyusername"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
            />
            <TextView />
        </TableRow>
        
                <!-- 第8行 -->
        <TableRow android:id="@+id/tableRow9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView />
            <TextView 
                android:id="@+id/textView9"
                android:text="承运人电话:"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <TextView 
                android:id="@+id/txt_cy_tel"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
            />
            <TextView />
        </TableRow>
        
        <!-- 第8行 -->
        <TableRow android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView />
            <TextView 
                android:id="@+id/textView8"
                android:text="运费:"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <TextView 
                android:id="@+id/txt_carriage"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
            />
            <TextView />
        </TableRow>
        <!-- 导航和视图的分割线 -->
        <View 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#CCCCCC"
        android:layout_above="@+id/tableRow6"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
        
             
    </TableLayout>
    <Button android:id="@+id/btn_qjf"
                android:text="买保险"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:textColor="#ffffff"
                android:layout_below="@+id/tableLayout1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>
    <Button android:id="@+id/btn_tydxq"
                android:text="托运单详情"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:textColor="#ffffff"
                android:layout_below="@+id/btn_qjf"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"/>
    <Button android:id="@+id/btn_gs"
                android:text="取消此单"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btn_tydxq"
                android:layout_marginTop="20dp"/>
