<?xml version="1.0" encoding="UTF-8"?>
 <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="#ffffff">

    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="10dp">

            <TextView android:text="用户名"
                android:id="@+id/textView1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
            />
            <EditText android:id="@+id/edit_user"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15dp"
                />


            <TextView android:text="密  码"
                android:id="@+id/textView2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="25dp"
            />
            <EditText android:id="@+id/edit_pwd"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="6-16位字母数字或标点符号组合"
                android:singleLine="true"
                android:textSize="15dp"/>


            <TextView android:text="确认密码 "
                android:id="@+id/textView3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="25dp"
            />
            <EditText android:id="@+id/edit_repwd"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textSize="15dp"/>


            <TextView android:text="手机号码 "
                android:id="@+id/txt_tel"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="25dp"
            />
            <EditText android:id="@+id/edit_tel"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="15dp"/>


            <TextView android:text="真实姓名 "
                android:id="@+id/textView5"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="25dp"
            />
            <EditText android:id="@+id/edit_name"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15dp"/>
            
            <TextView android:text="投保人地址"
                android:id="@+id/textView62"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="25dp"
            />
            <EditText android:id="@+id/edit_insure_address"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15dp"/>

            <TextView android:text="身份证号码"
                android:id="@+id/textView6"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="25dp"
            />
            <EditText android:id="@+id/edit_id"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15dp"/>
            <TextView android:text="身份证照片(选)"
                android:id="@+id/textView66"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"
                android:layout_marginTop="25dp"
            />
        <Button     
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"    
            android:text="点击此处选择图片"   
            android:textColor="#4f94cd"
            android:id="@+id/btn_selectImage"  
            android:layout_marginTop="15dp" 
            android:textSize="13dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttonshape2"
        /> 
        <ImageView     
            android:layout_width="150dp"    
            android:layout_height="150dp"    
            android:id="@+id/imageView" 
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
        />

      
        <Button
            android:id="@+id/btn_submit"
            android:text="确认提交"
            android:layout_width="220dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonshape"
            android:textColor="#ffffff">
        </Button>
        </LinearLayout>
</RelativeLayout>
</ScrollView>