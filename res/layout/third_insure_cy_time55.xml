<?xml version="1.0" encoding="UTF-8"?>
 <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"    
    android:background="#FFFFFFFF"
>
    <LinearLayout android:id="@+id/lin2"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
        
          <TextView 
             android:text="最高赔偿金额(车):"
                android:id="@+id/txt_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4f94cd"   
                android:textSize="18dp"             
            />         

       <RadioGroup android:id="@+id/radgroup"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
            <RadioButton android:id="@+id/radbtn_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50万"
                android:textSize="15dp"
                android:checked="true"
                android:layout_marginTop="15dp"/>
            <RadioButton android:id="@+id/radbtn_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100万"
                android:textSize="15dp"
                android:layout_marginTop="15dp"/>
            <RadioButton android:id="@+id/radbtn_150"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150万"
                android:textSize="15dp"
                android:layout_marginTop="15dp"/>
            <RadioButton android:id="@+id/radbtn_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200万"
                android:layout_marginTop="15dp"
                android:textSize="15dp"/>  
                                      
        </RadioGroup> 
        <RadioGroup android:id="@+id/radgroup2"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"> 
            <RadioButton android:id="@+id/radbtn_addition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附加险(自燃险)"
                android:textSize="15dp"/> 
        </RadioGroup>    
        </LinearLayout>
        <Button     
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"    
            android:text="点击此处上传货运清单(选)"   
            android:textColor="#4f94cd"
            android:id="@+id/btn_selectImage"  
            android:layout_below="@+id/lin2"
            android:layout_marginTop="15dp" 
            android:textSize="13dp"
            android:layout_centerInParent="true"
            android:background="@drawable/buttonshape2"
        /> 
        <ImageView     
            android:layout_width="150dp"    
            android:layout_height="150dp"    
            android:id="@+id/imageView" 
            android:layout_below="@+id/btn_selectImage"  
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
        />
        <Button
            android:id="@+id/btn_submit"
            android:text="确认提交"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_below="@+id/imageView" 
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonshape"
            android:textColor="#ffffff"/>
</RelativeLayout>
</ScrollView>   
        