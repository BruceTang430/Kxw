<?xml version="1.0" encoding="UTF-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:layout_marginTop="50dp"
        android:layout_gravity="center">

        
        <TextView android:id="@+id/txt_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:textColor="#4f94cd"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"/>
        
        <TextView android:id="@+id/txt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_goods_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <TextView android:id="@+id/txt_insur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_address"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="保单号:"/>

        <TextView android:id="@+id/txt_insurance_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_insur"
            android:layout_below="@+id/txt_address"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#4f94cd"/>
        
        <TextView android:id="@+id/txt_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布编号: "
        android:layout_below="@+id/txt_insur"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>
        
        <TextView android:id="@+id/txt_fbnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_time1"
        android:layout_below="@+id/txt_insur"
        android:layout_marginTop="5dp"
        android:textColor="#4f94cd"/>

        <TextView android:id="@+id/txt_time11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="投保时间: "
        android:layout_below="@+id/txt_time1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>
        
        <TextView android:id="@+id/txt_delivertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_time11"
        android:layout_below="@+id/txt_time1"
        android:layout_marginTop="5dp"
        android:textColor="#4f94cd"/>
        
    <TextView android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView android:id="@+id/txt_insure_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView android:id="@+id/txt_insured_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView android:id="@+id/txt_insured_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView android:id="@+id/txt_insured_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView android:id="@+id/txt_insuremoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView android:id="@+id/txt_goods_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView android:id="@+id/txt_goods_loadaddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView android:id="@+id/txt_goods_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView android:id="@+id/txt_carnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView android:id="@+id/txt_driver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView android:id="@+id/txt_driver_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView android:id="@+id/txt_driver_license"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView android:id="@+id/txt_ispay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView android:id="@+id/txt_premium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView android:id="@+id/txt_serial_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>    
    <TextView android:id="@+id/txt_fhorg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/> 
    <TextView android:id="@+id/txt_shorg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/> 
    <TextView android:id="@+id/txt_insurance_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/> 
    <TextView android:id="@+id/txt_insurance_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/> 
</RelativeLayout>
